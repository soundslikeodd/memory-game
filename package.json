{
  "name": "memory-game",
  "version": "0.0.1",
  "description": "childrens memory game",
  "main": "index.js",
  "author": "matthew schaadt <mattschaadt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "setup": "yarn install --pure-lockfile",
    "app": "yarn setup && yarn lint && webpack-dev-server --mode development --watch",
    "build": "webpack --mode production",
    "lint:es": "eslint --format=pretty --ext .jsx --ext .js .",
    "lint:style": "stylelint '**/*.scss'",
    "lint": "yarn lint:es && yarn lint:style",
    "deploy:gh-pages": "yarn setup && yarn lint && yarn build && gh-pages -d dist -b gh-pages"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "controlComponents": [
            "Select"
          ]
        }
      ],
      "jsx-a11y/label-has-for": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.2",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "file-loader": "^6.1.0",
    "gh-pages": "^3.1.0",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.4.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
